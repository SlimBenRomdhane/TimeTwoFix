@model TimeTwoFix.Web.Models.UserModels.CreateFrontDeskAssistantViewModel

@{
    ViewData["Title"] = "Create Assistant";
}

<div class="container mt-4">
    <h1 class="text-center text-primary">Register Front Desk Assistant</h1>
    <p class="text-center text-muted">Fill in the details below to add a new assistant.</p>

    <div class="card shadow-sm bg-light p-4">
        <form asp-action="CreateAssistant">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label text-dark"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label text-dark"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <label asp-for="Address" class="form-label text-dark"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="City" class="form-label text-dark"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="ZipCode" class="form-label text-dark"></label>
                    <input asp-for="ZipCode" class="form-control" />
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="PhoneNumber" class="form-label text-dark"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label text-dark"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="YearsOfExperience" class="form-label text-dark"></label>
                    <input asp-for="YearsOfExperience" class="form-control" />
                    <span asp-validation-for="YearsOfExperience" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="LastEmployer" class="form-label text-dark"></label>
                    <input asp-for="LastEmployer" class="form-control" />
                    <span asp-validation-for="LastEmployer" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="WorkStationNumber" class="form-label text-dark"></label>
                    <input asp-for="WorkStationNumber" class="form-control" />
                    <span asp-validation-for="WorkStationNumber" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="PhoneExtension" class="form-label text-dark"></label>
                    <input asp-for="PhoneExtension" class="form-control" />
                    <span asp-validation-for="PhoneExtension" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <label asp-for="SpokenLanguage" class="form-label text-dark"></label>
                    <input asp-for="SpokenLanguage" class="form-control" />
                    <span asp-validation-for="SpokenLanguage" class="text-danger"></span>
                </div>

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="BusinessKnowledge" />
                        @Html.DisplayNameFor(model => model.BusinessKnowledge)
                    </label>
                </div>

                <div class="text-center mt-4">
                    <input type="submit" value="Create Assistant" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}