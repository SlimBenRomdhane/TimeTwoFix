@model IEnumerable<TimeTwoFix.Web.Models.ClientModels.ReadClientViewModel>

@{
    ViewData["Title"] = "Clients List";
}

<div class="container mt-4">
    <h1 class="text-center">Clients List</h1>
    <form asp-action="Index" method="post" class="mb-4">
        <div class="row">
            <div class="col-md-3">
                <input type="text" name="searchName" class="form-control" placeholder="Search by Name..." />
            </div>
            <div class="col-md-3">
                <input type="text" name="searchPhone" class="form-control" placeholder="Search by Phone..." />
            </div>
            <div class="col-md-3">
                <input type="text" name="searchEmail" class="form-control" placeholder="Search by Email..." />
            </div>
            
        </div>
        <div class="text-end mt-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search"></i> Search
            </button>
            <a asp-action="Index" class="btn btn-primary">
                <i class="bi bi-search"></i> Reset
            </a>
        </div>
    </form>
    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Create New Client
        </a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@item.FirstName @item.LastName</h5>
                        <p class="card-text">
                            <strong>Phone:</strong> @item.PhoneNumber <br>
                            <strong>Address:</strong> @item.Address, @item.City <br>
                            <strong>Email:</strong> @item.Email <br>
                            <strong>Notes:</strong> @item.Notes <br>
                            <small class="text-muted">
                                Created: @item.CreatedAt | Updated: @item.UpdatedAt
                            </small>
                        </p>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>